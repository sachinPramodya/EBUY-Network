
@{
    ViewBag.Title = "Login";
}

<ol class="breadcrumb">
    <li><a href="@Url.Action("Index","Home")">Home</a></li>
    <li class="active">Sign in</li>
</ol>

<div class="container">
<div id="loginbox" style="margin-top:50px;" class="mainbox col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
    <div class="panel panel-default">

        <div style="padding-top:30px" class="panel-body">
            @if (ViewBag.loginFailed!=null)
            {
            <div id="login-alert" class="alert alert-danger col-sm-12">Invalid username or passsword entered!</div>
            }
            <form id="loginform" class="form-horizontal" role="form" onsubmit="return ValidateForm();" action="" method="post">

                <div style="margin-bottom: 25px" class="input-group">
                    <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                    <input id="jemailaddress" type="text" class="form-control" name="username" value="" placeholder="username or email">
                </div>

                <div style="margin-bottom: 25px" class="input-group">
                    <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
                    <input id="jpassword" type="password" class="form-control" name="password" placeholder="password">
                </div>




                <div style="margin-top:10px" class="form-group">
                    <!-- Button -->
                    <div class="col-sm-12 controls">
                        <input type="submit" class="btn btn-success btn-lg" value="Sign in"/>
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-12 control">
                        <div style="border-top: 1px solid#888; padding-top:15px; font-size:85%">
                            Don't have an account!
                            <a href="~/Register">
                                Sign Up Here
                            </a>
                        </div>
                    </div>
                </div>
            </form>

        </div>
    </div>
</div>

</div>


<script src="~/Scripts/Login/LoginScript.js"></script>