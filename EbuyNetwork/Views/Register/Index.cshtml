
@{
    ViewBag.Title = "Register";
}

<h2>Register</h2>

<div class="container">

    <form action="" method="post" onsubmit="return ValidateForm();" >
        <div class="col-lg-6">
            <div class="row">
                <div class="col-lg-6">
                    <div class="form-label">First name</div>
                    <input type="text" class="fullwidth form-control" id="jfirstname" name="firstname"/>
                </div>
                <div class="col-lg-6">
                    <div class="form-label">Last name</div>
                    <input type="text" class="fullwidth form-control" id="jlastname" name="lastname" />
                </div>
            </div>
            <div class="row">
                <div class="col-lg-6">
                    <div class="form-label">Email address</div>
                    <input type="text" class="fullwidth form-control" id="jemailaddress" name="emailaddress" />
                </div>
                <div class="col-lg-6">
                    <div class="form-label">Confirm email address</div>
                    <input type="text" class="fullwidth form-control" id="jemailaddress2" name="emailaddress2" />
                </div>
            </div>
            <div class="row">
                <div class="col-lg-6">
                    <div class="form-label">Login password</div>
                    <input type="password" class="fullwidth form-control" id="jpassword" name="password" />
                </div>
                <div class="col-lg-6">
                    <div class="form-label">Confirm login password</div>
                    <input type="password" class="fullwidth form-control" id="jpassword2" name="password2" />
                </div>
            </div>
            <div class="row">
                <div class="col-lg-12">
                    <div class="form-label">Shipping address</div>
                    <textarea class="fullwidth form-control" id="jaddress" name="address" style="height:100px;"></textarea>
                </div>
                <div class="col-lg-12">
                    <div class="form-label">Bank details</div>
                    <textarea class="fullwidth form-control" id="jbankdetails" name="bankdetails" style="height:100px;"></textarea>
                </div>
            </div>

            <div class="row">
                <div class="col-lg-12">
                    <div class="pad-6"></div>
                    <label><input type="checkbox" id="jacceptterms"/> I accept Ebuy Network Terms &amp; Conditions.</label>
                    <div class="pad-6"></div>
                    <div class="alert alert-danger" style="display:none;" id="jregisteralert"></div>
                    <div class="pad-6"></div>
                    <input class="btn btn-primary btn-lg" type="submit" name="registerRequest" value="Create account"/>
                </div>
            </div>






        </div>

    </form>





    <div class="col-lg-6">
        <div class="row">
            <div class="col-lg-12">
                <h3>Terms &amp; Conditions</h3>
                <div class="box">
                    <p>Ebuy network has no connection has limited connection between sellers.Thus we are unable to get total responsibility of your behaviour on this network.<br/><br/>Thus your bank details might be misused. Furthermore virtual products are not allowed.</p>
                    <hr/>
                    <a href="@Url.Action("Index","AboutUs")"><span class="glyphicon glyphicon-user"></span> About us</a>
                </div> 
            </div>
        </div>
    </div>


</div>

<script src="~/Scripts/Register/RegisterScript.js"></script>